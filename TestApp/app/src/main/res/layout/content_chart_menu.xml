<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChartSelectionMenu"
    tools:showIn="@layout/activity_chartmenu"
    android:background="@drawable/backgroundapp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LineChart"
        android:id="@+id/buttonLineChart"
        android:minWidth="165dp"
        android:textSize="12dp"
        android:layout_above="@+id/colorPieChart"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ColorPieChart"
        android:id="@+id/colorPieChart"
        android:minWidth="165dp"
        android:textSize="12dp"
        android:layout_below="@+id/buttonBarChart"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BarChart"
        android:id="@+id/buttonBarChart"
        android:minWidth="165dp"
        android:textSize="12dp"
        android:layout_above="@+id/buttonNeighbouurhoudChart"
        android:layout_alignStart="@+id/buttonNeighbouurhoudChart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NeighbourhoodChart"
        android:id="@+id/buttonNeighbouurhoudChart"
        android:minWidth="165dp"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PieChart"
        android:id="@+id/button"
        android:textSize="12dp"
        android:minWidth="170dp"
        android:layout_above="@+id/buttonLineChart"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
